# Rh√¥ne Risk Policy Analysis API - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Railway/Production
# ===========================================

# Claude API Key (required for policy analysis)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Webhook secret for signature verification (generate a secure random string)
WEBHOOK_SECRET=your-secure-webhook-secret

# ===========================================
# OPTIONAL - Defaults provided
# ===========================================

# Server port (Railway provides this automatically)
PORT=8000

# Environment (development | production)
ENVIRONMENT=production

# CORS origins (JSON array of allowed origins)
# For production, set to your frontend URL
CORS_ORIGINS=["https://your-frontend.vercel.app"]

# Claude model settings
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=8192

# Request timeouts (seconds)
CALLBACK_TIMEOUT=30
